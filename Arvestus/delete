#skript algus

read -p "Kirjuta failinimi mida tahab kustuda: " file

if [ -f "$file" ]; then
	rm -f $file
	echo "Fail on kustatatud."
#kui midagi ei sisastud, siis tuleb v채lja l체hike juhend
elif [ -z "$file" ]; then
	echo "Sisesta faili nimi."
#muid
else
	echo "Fail selle nimega ei ole."
fi
#v채ljasta nimekiri
read -p "Vajuta Enter, et n채eb failide nimekiri."
ls
